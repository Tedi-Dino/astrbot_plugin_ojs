{
  "group_configs": {
    "description": "多群独立配置列表",
    "type": "list",
    "hint": "点击加号添加一个群的配置",
    "items": {
      "type": "object",
      "description": "单个群配置",
      "items": {
        "group_id": {
          "description": "群号",
          "type": "string",
          "hint": "生效的群号"
        },
        "target_users": {
          "description": "目标用户列表",
          "type": "list",
          "items": { "type": "string" },
          "hint": "QQ号列表"
        },
        "reply_probability": {
          "description": "触发概率 (0.0 - 1.0)",
          "type": "float",
          "default": 0.2
        },
        "limit_once_per_day": {
          "description": "每日仅触发一次 (04:00刷新)",
          "type": "bool",
          "default": false,
          "hint": "开启后，该规则每天最多生效一次"
        },
        "reply_list": {
          "description": "回复内容列表",
          "type": "list",
          "items": { "type": "string" },
          "default": ["收到", "确实"]
        }
      }
    }
  },
  "max_per_minute": {
    "description": "单群每分钟最大回复数",
    "type": "int",
    "default": 10,
    "hint": "全局频率限制，防止刷屏"
  }
}
